#!/bin/bash
# vim: set ft=sh:

set -e

if ! command -v git >/dev/null 2>&1; then
  echo "Error: Git is not installed."
  exit 1
fi

repo_dir="${1:-.harunou}"
dot_dir="${2:-~}"

git clone https://github.com/harunou/harunou.git "$repo_dir" || {
  echo "Error: Failed to clone the repository."
  exit 1
}

cd "$repo_dir" || {
  echo "Error: Failed to change directory to \"$repo_dir\"."
  exit 1
}

echo "Setting up repo with dots files\n"

.local/bin/harunou-config setup-repo "$(repo_dir)" "$(dots_dir)" || {
  echo "Error: Repository setup failed."
  exit 1
}

echo "Installing dots files\n"

git export
