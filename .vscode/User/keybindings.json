// Place your key bindings in this file to override the defaultsauto[]
[
  // Manage windows
  {
    "key": "ctrl+w ctrl+u",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+w ctrl+i",
    "command": "workbench.action.toggleActivityBarVisibility"
  },
  {
    "key": "ctrl+w ctrl+e",
    "command": "workbench.view.explorer"
  },
  {
    "key": "ctrl+w ctrl+f",
    "command": "workbench.view.search"
  },
  {
    "key": "ctrl+w ctrl+v",
    "command": "workbench.view.scm"
  },
  {
    "key": "ctrl+w ctrl+d",
    "command": "workbench.view.debug"
  },
  {
    "key": "ctrl+w ctrl+x",
    "command": "workbench.view.extensions"
  },
  {
    "key": "ctrl+w ctrl+w",
    "command": "workbench.action.focusPreviousGroup",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+w ctrl+w",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorFocus"
  },
  {
    "key": "ctrl+w ctrl+m",
    "command": "workbench.action.toggleMenuBar"
  },
  {
    "key": "ctrl+w shift+f",
    "command": "workbench.action.files.openFolder"
  },
  {
    "key": "ctrl+w f",
    "command": "workbench.action.files.openFile"
  },
  {
    "key": "ctrl+w =",
    "command": "workbench.action.evenEditorWidths"
  },
  {
    "key": "ctrl+w o",
    "command": "workbench.action.maximizeEditor"
  },
  {
    "key": "ctrl+w k",
    "command": "workbench.action.keepEditor"
  },
  {
    "key": "ctrl+w v",
    "command": "workbench.action.splitEditor"
  },
  {
    "key": "ctrl+w s",
    "command": "workbench.action.splitEditorOrthogonal"
  },

  // Switch editors in group with Ctrl+j & Ctrl+k only in Normal mode
  {
    "key": "ctrl+j",
    "command": "-workbench.action.togglePanel"
  },
  {
    "key": "ctrl+k ctrl+j",
    "command": "-editor.unfoldAll",
    "when": "editorTextFocus && foldingEnabled"
  },
  {
    "key": "ctrl+tab",
    "command": "-workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
  },
  {
    "key": "ctrl+tab",
    "command": "-workbench.action.quickOpenNavigateNextInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
    "when": "vim.active && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenNavigateNextInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenLeastRecentlyUsedEditorInGroup"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "-workbench.action.quickOpenLeastRecentlyUsedEditorInGroup"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenNavigatePreviousInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "-workbench.action.quickOpenNavigatePreviousInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },

  // Open quit open dialog and select item
  {
    "key": "ctrl+w e",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+e",
    "command": "workbench.action.focusQuickOpen",
    // "when": "inQuickOpen"
  },
//   {
//     "key": "ctrl+y",
//     "command": "list.select",
//     "when": "inFilesPicker && inQuickOpen"
//   },
  {
    "command": "workbench.action.closeQuickOpen",
    "key": "ctrl+[",
    "when": "inFilesPicker && inQuickOpen"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpenNavigatePreviousInFilePicker",
    "when": "inFilesPicker && inQuickOpen"
  },
  {
    "key": "ctrl+n",
    "command": "workbench.action.quickOpenNavigateNextInFilePicker",
    "when": "inFilesPicker && inQuickOpen"
  },

  // Open and select suggestion
  {
    "key": "ctrl+n",
    "command": "editor.action.triggerSuggest",
    "when": "vim.mode == 'Insert' && editorHasCompletionItemProvider && editorTextFocus && !editorReadonly && !suggestWidgetVisible"
  },
  {
    "key": "ctrl+p",
    "command": "editor.action.triggerSuggest",
    "when": "vim.mode == 'Insert' && editorHasCompletionItemProvider && editorTextFocus && !editorReadonly && !suggestWidgetVisible"
  },
  {
    "key": "ctrl+y",
    "command": "acceptSelectedSuggestionOnEnter",
    "when": "acceptSuggestionOnEnter && editorTextFocus && suggestWidgetVisible && suggestionMakesTextEdit"
  },
  {
    "key": "ctrl+e",
    "command": "hideSuggestWidget",
    "when": "editorTextFocus && suggestWidgetVisible"
  },
  {
    "key": "ctrl+e",
    "command": "-workbench.action.quickOpenNavigateNextInFilePicker",
    "when": "inFilesPicker && inQuickOpen"
  },

  // Utilities
  {
    "key": "ctrl+i",
    "command": "editor.action.indentLines",
    "when": "editorTextFocus && vim.active && vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+]",
    "command": "-editor.action.indentLines",
    "when": "editorTextFocus && !editorReadonly"
  },

  // Disabled annoying keybindings
  {
    "key": "ctrl+space",
    "command": "-editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+h",
    "command": "-editor.action.startFindReplaceAction"
  },
  {
    "key": "ctrl+shift+g",
    "command": "-workbench.view.scm"
  },
  {
    "key": "ctrl+g",
    "command": "-workbench.action.gotoLine"
  },
  {
    "key": "ctrl+-",
    "command": "-workbench.action.zoomOut"
  },
  {
    "key": "ctrl+=",
    "command": "-workbench.action.zoomIn"
  },
  {
    "key": "ctrl+shift+=",
    "command": "-workbench.action.zoomIn"
  },
  {
    "key": "ctrl+m",
    "command": "-editor.action.toggleTabFocusMode"
  },
  {
    "key": "ctrl+w",
    "command": "-workbench.action.closeWindow",
    "when": "!editorIsOpen"
  },
  {
    "key": "ctrl+w",
    "command": "-workbench.action.closeActiveEditor"
  },
  {
    "key": "ctrl+p",
    "command": "-workbench.action.quickOpen"
  },
  {
    "key": "ctrl+e",
    "command": "-workbench.action.quickOpen"
  },
  {
    "key": "ctrl+shift+e",
    "command": "-workbench.view.explorer"
  },
  {
    "key": "ctrl+n",
    "command": "-workbench.action.files.newUntitledFile"
  },
  {
    "key": "ctrl+shift+n",
    "command": "-workbench.action.newWindow"
  },
  {
    "key": "ctrl+j",
    "command": "-workbench.action.togglePanel"
  },
  {
    "key": "ctrl+k enter",
    "command": "-workbench.action.keepEditor"
  },
  {
    "key": "ctrl+/",
    "command": "-editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+k ctrl+/",
    "command": "-editor.foldAllBlockComments",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+q",
    "command": "-workbench.action.quit"
  },
  {
    "key": "ctrl+k ctrl+o",
    "command": "-workbench.action.files.openFolder"
  },
  {
    "key": "ctrl+k o",
    "command": "-workbench.action.files.showOpenedFileInNewWindow"
  },
  {
    "key": "ctrl+o",
    "command": "-workbench.action.files.openFile"
  },
  {
    "key": "ctrl+d",
    "command": "-editor.action.addSelectionToNextFindMatch"
},
]
