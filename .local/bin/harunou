#!/bin/bash
# vim: ft=sh sw=2

h_name() {
  if [ -r /proc/sys/kernel/hostname ]; then
    cat /proc/sys/kernel/hostname
  else
    hostname | cut -d. -f1
  fi
}

h_have() { 
  type "$1" > /dev/null 2>&1 ;
}

if [ $# -gt 0 ]; then
  command="$1"
  shift
fi

case "$command" in
  touchpad)
    touchpad_id=$(xinput | grep -ioE "touchpad.*id=[0-9]+" | sed -E "s/.*id=([0-9]+)/\1/")
    if xinput list-props "$touchpad_id" | grep -iE "device enabled.*:.*1" >/dev/null; then
      xinput disable "$touchpad_id"
    else
      xinput enable "$touchpad_id"
    fi
    ;;

  powersave)
    if command -v powertop >/dev/null; then
      powertop --auto-tune
    fi
    ;;

  logout)
    loginctl terminate-session self
    ;;

  lock)
    sleep 1; xdg-screensaver lock || dm-tool switch-to-greeter || xset dpms force standby
    ;;

  hostname)
    h_name
    ;;

  teams)
    google-chrome-stable --user-data-dir=/tmp/teams https://www.microsoft.com/en-us/microsoft-teams/ >/dev/null 2>&1 &
    ;;

  whatsapp)
    google-chrome-stable --user-data-dir=/tmp/whatsapp https://web.whatsapp.com/ >/dev/null 2>&1 &
    ;;

  telegram)
    google-chrome-stable --user-data-dir=/tmp/telegram https://web.telegram.org/ >/dev/null 2>&1 &
    ;;

  slack)
    google-chrome-stable --user-data-dir=/tmp/slack https://app.slack.com/ >/dev/null 2>&1 &
    ;;

  update|up)
    sudo pacman -Syu
    ;;

  aur)
    exec "harunou-aur" "$@"
    ;;

  setup)
    exec "harunou-setup" "$@"
    ;;

  config)
    exec "harunou-config" "$@"
    ;;

  ssl)
    exec "harunou-ssl" "$@"
    ;;

  openconnect|oc)
    exec "harunou-openconnect" "$@"
    ;;

  epo)
    exec "harunou-epo" "$@"
    ;;

  np)
    exec "harunou-np" "$@"
    ;;

  '') 
    echo "Usage: `basename "$0"` <command> [options]" 
    ;;

  *) 
    echo "`basename "$0"` $command: unknown command." >&2; exit 1 
    ;;
esac
