#!/bin/bash
# vim:set et sw=2:

WORKDIR="${0%/*}"
source $WORKDIR/epo.conf

read_epo_user_password() {
  echo -ne "password for $EPOUSER: "
  read -s PASSWORD
}

read_epo_user_digipass() {
  echo -ne "digipass for $EPOUSER: "
  read DIGIPASS
}

set_vpn(){
  sudo harunou openconnect status >/dev/null 2>&1
  is_vpn_up=$?
  if [[ $is_vpn_up -eq 0 ]]; then 
    harunou openconnect down
    sleep 1
  fi
  echo "Setting up vpn..."
  harunou openconnect up $EPOUSER $DIGIPASS $EPOSERVER "$EPOHOSTS"
}

set_kerberos(){
  echo -ne "\nSetting up kerberos ticket...\n"
  echo "$PASSWORD" | kinit $EPOUSER
}

set_proxy() {
  echo -ne "\nSetting up proxy...\n"
  curl --silent https://registry.npmjs.org/ --proxy $EPOPROXY --proxy-user "$EPOUSER:$PASSWORD"
}

remote_desktop() {
  xfreerdp /bpp:32 /gfx +aero +fonts  /u:$EPOUSER /v:$EPOWORKSTATION /size:100%w /cert:ignore /floatbar:sticky:off,show:always
}

vpn_status() {
  ping -c 3 -W 1 -q $EPOPING >/dev/null 2>&1
  if [ $? -eq 0 ]; then
    echo "UP"
  else 
    echo "DOWN"
  fi
}

if [ $# -gt 0 ]; then
  command="$1"
  shift
fi

case "$command" in
  vpn)
    read_epo_user_digipass
    set_vpn
    ;;

  kerberos)
    read_epo_user_password
    set_kerberos
    ;;

  proxy)
    read_epo_user_password
    set_proxy
    ;;

  desktop)
    remote_desktop
    ;;

  status)
    echo -ne 'Cheking vpn...\n'
    echo "vpn: $(vpn_status)"
    echo -ne '\nChecking kerberos...\n'
    klist
    echo -ne '\nChecking proxy...\n'
    curl --silent https://registry.npmjs.org/ --proxy $EPOPROXY
    ;;

  vpn-status)
    vpn_status
    ;;

  '') 
    read_epo_user_password
    echo -ne '\n'
    read_epo_user_digipass
    set_vpn
    sleep 2
    set_kerberos
    set_proxy
    ;;

  *) 
    echo "`basename "$0"` $command: unknown command." >&2; exit 1 
    ;;
esac

