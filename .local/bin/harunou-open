#!/bin/bash
# vim:set et sw=2:

inpath() { type "$1" >/dev/null 2>&1; }

if [ $# -gt 0 ]; then 
  command="$1"
  shift
fi

case "$command" in
  image-preview)
    if inpath imv; then 
      imv "$@"
    fi
    ;;

  '')
    echo "Usage: `basename "$0"` <command> [options]" 
    ;;

  *)
    echo "`basename "$0"` $command: unknown command." >&2; exit 1 
    ;;
esac
