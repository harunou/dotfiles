[user]
  name = harunou
  email = d.harunou@gmail.com

[alias]
#https://stackoverflow.com/questions/1057564/pretty-git-branch-graphs=
#quick look 
  loggsa = log --color --date-order --graph --oneline --decorate --simplify-by-decoration --all
  loggs  = log --color --date-order --graph --oneline --decorate --simplify-by-decoration
#Look with relative date
  logdra = log --color --date-order --graph --format=\"%C(auto)%h%Creset %C(blue bold)%ar%Creset %C(auto)%d%Creset %s\" --all
  logdr  = log --color --date-order --graph --format=\"%C(auto)%h%Creset %C(blue bold)%ar%Creset %C(auto)%d%Creset %s\"  
#Look with date
  logda  = log --color --date-order --date=\"format:%d.%m.%y %H:%M\" --graph --format=\"%C(auto)%h%Creset %C(blue bold)%ad%Creset %C(auto)%h%Creset%C(auto)%d%Creset %s\" --all
  logd   = log --color --date-order --date=\"format:%d.%m.%y %H:%M\" --graph --format=\"%C(auto)%h%Creset %C(blue bold)%ad%Creset %C(auto)%d%Creset %s\"        
#extend look
  logga  = log --color --date-order --graph --oneline --decorate --all
  logg   = log --color --date-order --graph --oneline --decorate
#Basic graph log
  loga   = log --graph --color --decorate --all
#For repos without subject body commits (vim repo, git-svn clones)
  logt   = log --graph --color --format=\"%C(auto)%h %d %<|(100,trunc) %s\"
  logta  = log --graph --color --format=\"%C(auto)%h %d %<|(100,trunc) %s\" --all        
  logtsa = log --graph --color --format=\"%C(auto)%h %d %<|(100,trunc) %s\" --all --simplify-by-decoration 

[core]
  pager = less -S

[help]
  autocorrect = 10

[advice]
  statusHints = false

[branch]
  autosetupmerge = always
  autosetuprebase = always

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  grep = auto

[push]
  default = simple
  followTags = true

[pull]
  rebase = merges

[rebase]
  autosquash = true

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[merge]
  tool = vimdiff
  conflictStyle = diff3
  ff = false

[include]
  path = .gitconfig.local
